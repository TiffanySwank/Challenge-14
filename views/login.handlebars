<div class="login-signup">
  <form class="login-form">
    <h2>Login</h2>
    <div class="form-group">
      <label for="username-login">Username:</label>
      <input type="text" id="username-login" class="form-control" />
    </div>
    <div class="form-group">
      <label for="password-login">Password:</label>
      <input type="password" id="password-login" class="form-control" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-login">Login</button>
    </div>
  </form>

  <form class="signup-form">
    <h2>Sign Up</h2>
    <div class="form-group">
      <label for="username-signup">Username:</label>
      <input type="text" id="username-signup" class="form-control" />
    </div>
    <div class="form-group">
      <label for="password-signup">Password:</label>
      <input type="password" id="password-signup" class="form-control" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-signup">Signup</button>
    </div>
  </form>
</div>
<script src="/javascript/login.js"></script>